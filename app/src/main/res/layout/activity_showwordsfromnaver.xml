<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:gravity="bottom"
    android:orientation="vertical">

    <!--크롤링결과-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >

        <!--제목-->

        <!--예문 1~5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <!--단어-->
            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="단어"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/meaning"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:text=": 뜻"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/button_refresh"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/circle_plus"
                android:background="#ffffff"

                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/en_sentence1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="예문"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    ></TextView>

                <TextView
                    android:id="@+id/kr_sentence1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="해석"
                    android:textSize="@dimen/kr_sentence"
                    android:layout_marginLeft="4dp"
                    android:gravity="top"
                    >
                </TextView>
            </LinearLayout>
                <Button
                    android:id="@+id/Button_sentence1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_plus"
                    />
        </LinearLayout>

        <!--예문 1~5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/en_sentence2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="예문"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    ></TextView>

                <TextView
                    android:id="@+id/kr_sentence2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="해석"
                    android:textSize="@dimen/kr_sentence"
                    android:layout_marginLeft="4dp"
                    android:gravity="top"
                    >
                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/Button_sentence2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_plus"
                />
        </LinearLayout>

        <!--예문 1~5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/en_sentence3"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="예문"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    ></TextView>

                <TextView
                    android:id="@+id/kr_sentence3"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="해석"
                    android:textSize="@dimen/kr_sentence"
                    android:layout_marginLeft="4dp"
                    android:gravity="top"
                    >
                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/Button_sentence3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_plus"
                />
        </LinearLayout>

        <!--예문 1~5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/en_sentence4"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="예문"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    ></TextView>

                <TextView
                    android:id="@+id/kr_sentence4"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="top"
                    android:text="해석"
                    android:textSize="@dimen/kr_sentence"></TextView>
            </LinearLayout>
            <Button
                android:id="@+id/Button_sentence4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_plus"
                />
        </LinearLayout>

        <!--예문 1~5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/en_sentence5"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="예문"
                    android:textSize="20sp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    ></TextView>

                <TextView
                    android:id="@+id/kr_sentence5"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="해석"
                    android:textSize="@dimen/kr_sentence"
                    android:layout_marginLeft="4dp"
                    android:gravity="top"
                    >
                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/Button_sentence5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_plus"
                />
        </LinearLayout>


    </LinearLayout>

    <!--버튼 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/changeView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:text="push"
            android:layout_gravity="center"
            android:textSize="24sp" />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_show_naver_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="?attr/colorPrimary"
        android:background="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"/>


</LinearLayout>